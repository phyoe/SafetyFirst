<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="saftyfirst.phyoekhantzin.net.safetyfirst">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="safetyfirst.phyoekhantzin.net.SafetyFirstApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.EarthquakeActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" />
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.TelephoneListActivity"
            android:label="@string/title_activity_telephone_list"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.FireActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" />
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.ExtremeHeatActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" />
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.FloodActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" ></activity>
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.LightningActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" ></activity>
        <activity
            android:name="safetyfirst.phyoekhantzin.net.activities.TsunamiActivity"
            android:parentActivityName="safetyfirst.phyoekhantzin.net.activities.SafetyListActivity" ></activity>
    </application>

</manifest>
